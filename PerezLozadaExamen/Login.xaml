<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PerezLozadaExamen.Login">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="LOGOUISRAEL.png" Aspect="Fill"/>

            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario"/>
            <Entry x:Name="txtContrasena" Placeholder="Ingrese la contrasena" IsPassword="True"/>

            <Button x:Name="btnAbrir" Text="Ingresar" Clicked="btnAbrir_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>